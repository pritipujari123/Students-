    package abc;

public class Pattern1 {

public static void main(String[] args) {
for(int i=5;i>=1;i--)
{
for(int j=5;j>i;j--)
{
System.out.print(" ");
}
for (int j=1;j<=(2*i-1);j++)
{
System.out.print("*");
}
System.out.println();
}


}

}



